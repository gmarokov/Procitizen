@using Reporter.Common
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Reporter</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

<div class="ui menu">
    <div class="ui container">
        <a href="/home/index" class="header item">
            <img class="logo" src="~/Content/Images/procitizen-logo-v3-small.png" style="width: 13.5em;">
        </a>
        <div class="ui simple dropdown item">
            <i class="grid layout icon"></i> Browse <i class="dropdown icon"></i>
            <div class="menu">
                <a class="item" href="@Url.Action("all", "reports", new { area = string.Empty })"><i class="file text outline icon"></i> Reports</a>
                <a class="item" href="@Url.Action("all", "reporters", new { area = string.Empty })"><i class="spy icon"></i> Reporters</a>
                <a class="item" href="@Url.Action("all", "institutions", new { area = string.Empty })"><i class="university icon"></i> Institutions</a>
            </div>
        </div>
        <div class="ui simple item">
            <a href="@Url.Action("Index", "Statistics", new { area = string.Empty })"><i class="trophy icon"></i> Statistics</a>
        </div>
        
        <div class="ui simple dropdown item">
            More <i class="dropdown icon"></i>
            <div class="menu">
                @Html.ActionLink("About", "About", "Home", new { area = string.Empty }, new { @class = "item" })
                @Html.ActionLink("Contact", "Contact", "Home", new { area = string.Empty }, new { @class = "item" })
            </div>
        </div>
        <div class="right menu">
            <div class="item">
                <a id="addReportsLink" class="ui green button inverted" href="@Url.Action("Create", "Reports", new { area = string.Empty })"><i class="plus icon"></i> Add report</a>
            </div>
            <div class="right item">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
        
    </div>
</div>
    
@RenderBody()
   
<footer>
    <div class="ui inverted vertical footer segment">
        <div class="ui center aligned container">
            <div class="ui stackable inverted divided grid">
                <div class="three wide column">
                    <h4 class="ui inverted header">Group 1</h4>
                    <div class="ui inverted link list">
                        <a href="https://semantic-ui.com/examples/fixed.html#" class="item">Link One</a>
                        <a href="https://semantic-ui.com/examples/fixed.html#" class="item">Link Two</a>
                        <a href="https://semantic-ui.com/examples/fixed.html#" class="item">Link Three</a>
                        <a href="https://semantic-ui.com/examples/fixed.html#" class="item">Link Four</a>
                    </div>
                </div>
                <div class="three wide column">
                    <h4 class="ui inverted header">Group 2</h4>
                    <div class="ui inverted link list">
                        <a href="https://semantic-ui.com/examples/fixed.html#" class="item">Link One</a>
                        <a href="https://semantic-ui.com/examples/fixed.html#" class="item">Link Two</a>
                        <a href="https://semantic-ui.com/examples/fixed.html#" class="item">Link Three</a>
                        <a href="https://semantic-ui.com/examples/fixed.html#" class="item">Link Four</a>
                    </div>
                </div>
                <div class="three wide column">
                    <h4 class="ui inverted header">Group 3</h4>
                    <div class="ui inverted link list">
                        <a href="https://semantic-ui.com/examples/fixed.html#" class="item">Link One</a>
                        <a href="https://semantic-ui.com/examples/fixed.html#" class="item">Link Two</a>
                        <a href="https://semantic-ui.com/examples/fixed.html#" class="item">Link Three</a>
                        <a href="https://semantic-ui.com/examples/fixed.html#" class="item">Link Four</a>
                    </div>
                </div>
                <div class="seven wide column">
                    <h4 class="ui inverted header">Footer Header</h4>
                    <p>Extra space for a call to action inside the footer that could help re-engage users.</p>
                </div>
            </div>
            <div class="ui inverted section divider"></div>
            <img src="./Fixed Menu Example - Semantic_files/logo.png" class="ui centered mini image">
            <p>&copy; @DateTime.Now.Year - Reporter</p>
            <div class="ui horizontal inverted small divided link list">
                <a class="item" href="https://semantic-ui.com/examples/fixed.html#">Site Map</a>
                <a class="item" href="https://semantic-ui.com/examples/fixed.html#">Contact Us</a>
                <a class="item" href="https://semantic-ui.com/examples/fixed.html#">Terms and Conditions</a>
                <a class="item" href="https://semantic-ui.com/examples/fixed.html#">Privacy Policy</a>
            </div>
        </div>
    </div>
</footer>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/semantic-ui")

@Scripts.Render("~/bundles/bodymovin")
@RenderSection("Scripts", required: false)
    <script>$('.ui.dropdown').dropdown();</script>

</body>
</html>
