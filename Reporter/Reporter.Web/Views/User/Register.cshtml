@model Reporter.Web.ViewModels.User.RegisterViewModel
@{
    ViewBag.Title = "Register to your local community";
}
<div class="ui container content">
    <div class="ui center aligned text-center">
        <div class="ui attached message">
            <div class="header">
                <h3>@ViewBag.Title</h3>
            </div>
            <p>Fill out the form below to sign-up for a new account</p>
        </div>
        @using (Html.BeginForm("Register", "User", FormMethod.Post, new {@class = "ui large form form-centered attached segment", role = "form"}))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new {@class = "text-danger"})
            <div class="ui stacked">
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        @Html.TextBoxFor(m => m.FullName, new { @class = "", placeholder = "Please, enter your two names"})
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="mail icon"></i> 
                        @Html.TextBoxFor(m => m.Email, new { @class = "", placeholder = "Please, enter email"})
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        @Html.PasswordFor(m => m.Password, new {@class = "", placeholder = "Please, enter password"})
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "", placeholder = "Please, confirm password"})
                    </div>
                </div>
                <div class="ui fluid large blue submit button"><i class="rocket icon"></i> Register me</div>


            </div>
            <div class="ui error message"></div>
        }
    </div>
</div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
<script>
        $(document)
        .ready(function() {
            $('.ui.form')
            .form({
                fields: {
                email: {
                    identifier  : 'email',
                    rules: [
                    {
                        type   : 'empty',
                        prompt : 'Please enter your e-mail'
                    },
                    {
                        type   : 'email',
                        prompt : 'Please enter a valid e-mail'
                    }
                    ]
                },
                password: {
                    identifier  : 'password',
                    rules: [
                    {
                        type   : 'empty',
                        prompt : 'Please enter your password'
                    },
                    {
                        type   : 'length[6]',
                        prompt : 'Your password must be at least 6 characters'
                    }
                    ]
                }
                }
            })
            ;
        })
        ;
</script>
            }


